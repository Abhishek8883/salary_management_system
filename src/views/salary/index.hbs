                    <div class="row mb-2">
                        <div class="col-sm-6">
                            <h1 class="m-0">Salaries</h1>
                        </div>
                    </div>
                </div>
            </div>


            <div class="content">
                <div class="container-fluid ">
                    <div class="row d-flex justify-content-between">
                        <a href="/salary/createSalaryPage">
                        <button class="btn btn-primary ml-2"><i class="fa-solid fa-plus"></i> Add Salary</button></a>
                        <a href="/salary/makeSalary">
                        <button class="btn btn-success mr-2"><i class="fa-solid fa-calculator"></i> Calculate Salaries</button></a>
                    </div>

                    <div class="row d-flex justify-content-center mt-4">
                        {{#if isData}}
                        <div class="card">
                            <div class="card-header">
                                <h3 class="card-title">Showing All Salaries</h3>
                            </div>

                            <div class="card-body">
                                <div id="example2_wrapper" class="dataTables_wrapper dt-bootstrap4">
                                    <div style="min-width: 70vw;" class="row  ">
                                        <div style="min-width: 100%;" class=" col-sm-12">
                                            <table id="example2"
                                                class="table table-bordered table-hover dataTable dtr-inline"
                                                role="grid" aria-describedby="example2_info">
                                                <thead>
                                                    <tr role="row">
                                                        <th class="sorting sorting_asc" tabindex="0"
                                                            aria-controls="example2" rowspan="1" colspan="1"
                                                            aria-sort="ascending"
                                                            aria-label="Name: activate to sort column descending">
                                                            Employee Name(Id)</th>
                                                        <th class="sorting" tabindex="0" aria-controls="example2"
                                                            rowspan="1" colspan="1"
                                                            aria-label="Email: activate to sort column ascending">
                                                            Month</th>
                                                        <th class="sorting" tabindex="0" aria-controls="example2"
                                                            rowspan="1" colspan="1"
                                                            aria-label="Mobile: activate to sort column ascending">
                                                            Year</th>
                                                        <th class="sorting" tabindex="0" aria-controls="example2"
                                                            rowspan="1" colspan="1"
                                                            aria-label="Address: activate to sort column ascending">
                                                            Total Working Days</th>
                                                        <th class="sorting" tabindex="0" aria-controls="example2"
                                                            rowspan="1" colspan="1"
                                                            aria-label="Base Salary: activate to sort column ascending">
                                                            Total Leave Taken</th>
                                                        <th class="sorting" tabindex="0" aria-controls="example2"
                                                            rowspan="1" colspan="1"
                                                            aria-label="Base Salary: activate to sort column ascending">
                                                            Overtime</th>
                                                        <th class="sorting" tabindex="0" aria-controls="example2"
                                                            rowspan="1" colspan="1"
                                                            aria-label="Base Salary: activate to sort column ascending">
                                                            Total Salary</th>
                                                        <th class="sorting" tabindex="0" aria-controls="example2"
                                                            rowspan="1" colspan="1"
                                                            aria-label="Base Salary: activate to sort column ascending">
                                                            Is Calculated</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    {{#each Salaries}}
                                                    <tr >
                                                        {{#if this.Salary}}
                                                        <td class="dtr-control sorting_1" tabindex="0">{{this.Name}} ({{this.id}})</td>
                                                        <td>{{this.Salary.month}}</td>
                                                        <td>{{this.Salary.year}}</td>
                                                        <td>{{this.Salary.total_working_days}}</td>
                                                        <td>{{this.Salary.total_leave_taken}}</td>
                                                        <td>{{this.Salary.overtime}}</td>
                                                        <td>{{this.Salary.total_salary_made}}</td>
                                                        <td>{{this.Salary.Is_salary_calculated}}</td>
                                                        {{/if}}
                                                    </tr>
                                                    {{/each}}
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-sm-12 col-md-5">
                                            <div class="dataTables_info" id="example2_info" role="status"
                                                aria-live="polite">Showing page {{page}} of {{totalPages}}</div>
                                        </div>
                                        <div class="col-sm-12 col-md-7">
                                            <div class="dataTables_paginate paging_simple_numbers"
                                                id="example2_paginate">
                                                <ul class="pagination">


                                                    {{#if previousPage}}
                                                    <li class="paginate_button page-item previous "
                                                        id="example2_previous"><a href="/salary/getAll/{{previousPage}}" aria-controls="example2"
                                                            data-dt-idx="0" tabindex="0" class="page-link">Previous</a>
                                                    </li>
                                                    <li class="paginate_button page-item "><a href="/salary/getAll/{{previousPage}}"
                                                            aria-controls="example2" data-dt-idx="1" tabindex="0"
                                                            class="page-link">{{previousPage}}</a></li>
                                                     {{else}}
                                                    <li class="paginate_button page-item previous disabled "
                                                        id="example2_previous"><a
                                                            href="/employee/getAll/{{previousPage}}"
                                                            aria-controls="example2" data-dt-idx="0" tabindex="0"
                                                            class="page-link">Previous</a>
                                                    </li>
                                                   {{/if}}

                                                    <li class="paginate_button page-item active "><a href="/salary/getAll/{{page}}"
                                                            aria-controls="example2" data-dt-idx="6" tabindex="0"
                                                            class="page-link">{{page}}</a></li>
                                                    {{#if nextPage}}
                                                    <li class="paginate_button page-item "><a href="/salary/getAll/{{nextPage}}"
                                                            aria-controls="example2" data-dt-idx="6" tabindex="0"
                                                            class="page-link">{{nextPage}}</a></li>
                                                    <li class="paginate_button page-item next" id="example2_next">
                                                        <a
                                                            href="/salary/getAll/{{nextPage}}" aria-controls="example2" data-dt-idx="7"
                                                            tabindex="0" class="page-link">Next</a></li>
                                                    {{/if}}
